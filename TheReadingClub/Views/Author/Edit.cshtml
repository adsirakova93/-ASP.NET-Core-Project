@model EditAuthorFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.FullName"></label>
        <input asp-for="@Model.FullName" class="form-control" placeholder="Full Name">
        <span asp-validation-for="@Model.FullName" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ImageURL"></label>
        <input asp-for="@Model.ImageURL" class="form-control" placeholder="Image URL">
        <span asp-validation-for="@Model.ImageURL" class="small text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" id="@Model.Id">Edit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}